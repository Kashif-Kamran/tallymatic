{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node", "express", "jest"],
    "skipLibCheck": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["apps/api/src/*"],
      "@shared": ["libs/shared"]
    }
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
