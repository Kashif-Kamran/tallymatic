{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node", "express", "jest"],
    "skipLibCheck": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["apps/api/src/*"],
      "@shared": ["libs/shared"]
    }
  },
  "include": [
    "jest.config.ts",
    "src/**/*.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "../../libs/shared/**/*.ts"
  ]
}
